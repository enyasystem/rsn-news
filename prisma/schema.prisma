generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  news      News[]    @relation("AdminNews")
  auditLogs AuditLog[]
}

model News {
  id         Int      @id @default(autoincrement())
  title      String
  slug       String   @unique
  excerpt    String?  // Added for external news summary
  content    String
  imageUrl   String?
  publishedAt DateTime? // Added for external news publish date
  source     String?   // Added for external news source
  sourceUrl  String?   // Added for external news source URL
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  author     Admin?   @relation("AdminNews", fields: [authorId], references: [id])
  authorId   Int?
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  news  News[]
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  admin     Admin?   @relation(fields: [adminId], references: [id])
  adminId   Int?
  createdAt DateTime @default(now())
  details   String?
}
